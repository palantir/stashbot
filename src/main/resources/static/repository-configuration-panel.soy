                        {/call}
                        {call aui.form.textField}
                            {param id: 'verifyLabel' /}
                            {param labelContent: stash_i18n('stash.web.stash.verifyLabel.label', 'Jenkins Node Label') /}
                            {param value: $verifyLabel /}
