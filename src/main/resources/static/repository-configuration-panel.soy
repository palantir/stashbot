                        {/call}
                        {call aui.form.textField}
                            {param id: 'maxVerifyChain' /}
                            {param labelContent: stash_i18n('stash.web.stash.maxVerifyChain.label', 'Maximum number of commits to verify on a single push') /}
                            {param value: $maxVerifyChain /}
                        {/call}
