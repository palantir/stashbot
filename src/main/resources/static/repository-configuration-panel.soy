                    {/call}
                    {call aui.form.textField}
                        {param id: 'artifactsPath' /}
                        {param labelContent: stash_i18n('stash.web.stash.artifactsPath.label', 'Artifact Pattern') /}
                        {param value: $artifactsPath /}
